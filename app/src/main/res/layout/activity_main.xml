<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <info.fitapp.chart.widget.BarChartView
            android:padding="10dp"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:labelSize="@dimen/chartTextSize"
            app:barStartColor="@color/colorPrimary"
            app:barEndColor="@color/colorPrimaryDark"/>

    <TextView android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:fontFamily="@font/rubik_regular"
              android:layout_height="wrap_content"
              android:text="@string/textSizeTest"
              android:textSize="@dimen/chartTextSize"/>

</LinearLayout>
